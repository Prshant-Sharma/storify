{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "checkJs": false,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "typeRoots": ["./typings.d.ts"]
  },
  "include": [
    "src",
    "stories",
    "index.tsx",
    "jest.config.js",
    "setupTests.js",
    "webpack.js",
    "webpack.common.js",
    "typings.d.ts",
    "index.d.ts", "stories"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.tsx"
  ]
}
